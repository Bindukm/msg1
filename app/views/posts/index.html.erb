
<h1>Listing Books</h1><br>
<%= link_to "Import Linkedin", "/linkedin/auth" %>
  

  <%= image_tag("book3.png", :width => 500, :height => 200)%>

  <div class="row">
    <% @posts.each do |post| %>
    <div class="col-sm-3">
      <div class="well well-sm">
        
          <h5><b>Title:  </b><%= post.title %></h5>
          <h5><b>Authorname:</b> <%= post.authorname %></h5>
          <h5><b>Edition: </b><%= post.edition %></h5>
          <h5><b>Price: </b><%= post.price %></h5>
          <h5><b>Description </b><%= post.description %></h5>
          <hr>
          
          <%= link_to 'Edit', edit_post_path(post),:class=>"btn btn-success" %> 
          <%= link_to 'Destroy', post_path(post), :class=>"btn btn-success",method: :delete, data: { confirm: ' Are you sure?' } %> 
          <%= link_to 'Show', post_path(post),:class=>"btn btn-success" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>

    <center>
    <%= link_to 'Back', root_path,:class=>"btn btn-primary" %>
    <div class="page">
      <%= paginate @posts %>
    </div>
  </center>

 
























