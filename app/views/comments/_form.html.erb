
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :feedback %><br>
    <%= f.text_area :feedback %>
  </p>
  <p class="button">
    <%= submit_tag 'Create Comments',:class=>"btn btn-primary"%>
<% end %>
